<?xml version="1.0" encoding="UTF-8"?>
<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd" xmlns="http://maven.apache.org/SETTINGS/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <servers>
    <server>
     <id>release</id>
      <configuration>
        <httpHeaders>
          <property>
            <name>Job-Token</name>
            <value>${env.CI_JOB_TOKEN}</value>
          </property>
        </httpHeaders>
      </configuration>
    </server>
    <server>
     <id>snapshots</id>
      <configuration>
        <httpHeaders>
          <property>
            <name>Job-Token</name>
            <value>${env.CI_JOB_TOKEN}</value>
          </property>
        </httpHeaders>
      </configuration>
    </server>
  </servers>
  <profiles>
    <profile>
      <id>maven</id>
      <repositories>
        <repository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>release</id>
          <name>${env.MAVEN_RELEASE_REPO}</name>
          <url>${env.MAVEN_RELEASE_URL}</url>
        </repository>
        <repository>
          <snapshots />
          <id>snapshots</id>
          <name>${env.MAVEN_SNAPSHOT_REPO}</name>
          <url>${env.MAVEN_SNAPSHOT_REPO_URL}</url>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>release</id>
          <name>${env.MAVEN_RELEASE_REPO}</name>
          <url>${env.MAVEN_RELEASE_REPO_URL}</url>
        </pluginRepository>
        <pluginRepository>
          <snapshots />
          <id>snapshots</id>
          <name>${env.MAVEN_SNAPSHOT_REPO}</name>
          <url>${env.MAVEN_SNAPSHOT_REPO_URL}</url>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
  <distributionManagement>
    <repository>
      <uniqueVersion>false</uniqueVersion>
      <id>gitlab-maven</id>
      <name>Gitlab Maven</name>
      <url>https://gitlab.com/api/v4/projects/lfitx-poc/ci-sample-java-maven/packages/maven</url>
    </repository>
  </distributionManagement>
  <activeProfiles>
      <activeProfile>maven</activeProfile>
  </activeProfiles>
</settings>
